{
    "name": "entitypanel",
    "version": "1.0.0",
    "description": "",
    "dependencies": {
        "NidgetContext": "file:../NidgetContext",
        "bootstrap": "^4.1.3",
        "jjjrmi": "^0.4.10",
        "jquery": "",
        "nerscriber": "file:../NERScriber",
        "nerveserver": "file:../Server",
        "nidget": "file:../Nidget",
        "popper.js": "^1.14.4",
        "utility": "file:../Utility"
    },
    "scripts": {
        "build": "npm run build-js && npm run assets",
        "build-js": "browserify src/scripts/main.js -o public_html/main.js -d",
        "assets": "assets -v src && npm run inject",
        "inject": "inject public_html/lib/**/* public_html/styles/**/* public_html/index.html",
        "watch-js": "watchify src/scripts/main.js -o public_html/main.js -dv",
        "clean": "clean -e"
    },
    "assets": {
        "src": [
            "src/styles/**/*",
            "src/assets/**/*",
            {
                "src": "node_modules/bootstrap/dist/css/bootstrap.css",
                "dest": "${dest}/styles/bootstrap"
            }            
        ],
        "dest": "public_html"        
    },
    "clean": [
        "public_html/assets/entitypanel/**",
        "public_html/assets/nidgetcontext/**",
        "public_html/styles/bootstrap/**",
        "public_html/styles/entitypanel/**",
        "public_html/styles/nidgetcontext/**",
        "public_html/main.js"
    ],
    "main": "src/scripts/entitypanel/entitypanel.js"
}
