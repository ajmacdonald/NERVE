{
    "name": "entitypanel",
    "version": "1.0.0",
    "description": "",
    "dependencies": {
        "NidgetContext": "file:../NidgetContext",
        "asset-assistant": "0.0.11",
        "bootstrap": "^4.1.3",
        "jjjrmi": "^0.4.10",
        "jquery": "",
        "nerscriber": "file:../NERScriber",
        "nerveserver": "file:../Server",
        "nidget": "file:../Nidget",
        "utility": "file:../Utility"
    },
    "scripts": {
        "build": "npm run build-js && npm run assets",
        "build-js": "browserify src/scripts/main.js -o public_html/main.js -d",
        "assets": "assets -v && npm run inject-css",
        "inject-css": "inject public_html/styles/**/* public_html/index.html",
        "watch-js": "watchify src/scripts/main.js -o public_html/main.js -dv",
        "clean": "assets --clean",
        "browse-to": "opn "
    },
    "assets": {
        "local-src": [
            "node_modules/bootstrap/dist/css/bootstrap.css",
            "node_modules/bootstrap/dist/js/bootstrap.js"
        ],
        "src": [
            "src/styles/**/*",
            "src/assets/**/*"
        ],
        "dest": "public_html"
    },
    "main": "src/scripts/entitypanel/entitypanel.js"
}
